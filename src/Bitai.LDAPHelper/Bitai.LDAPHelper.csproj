<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Viko Bastidas (BITAI)</Authors>
    <Company>BITAI</Company>
    <Product>LDAP Services Wrappers</Product>
    <Description>Library to wrap  Novell.Directory.Ldap.NETStandard functionality to make LDAP common queries to search accounts and objects in a Directory Service.</Description>
    <Copyright></Copyright>
    <Version>3.0.1</Version>
    <AssemblyVersion>3.0.0.1</AssemblyVersion>
    <PackageIcon>hierarchy_32.png</PackageIcon>
    <FileVersion>3.0.0.1</FileVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Bitai.LDAPHelper</PackageId>
    <AssemblyName>Bitai.LDAPHelper</AssemblyName>
    <PackageProjectUrl>https://github.com/bitai-cs/LDAPHelper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bitai-cs/LDAPHelper.git</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>ldap, authentication, directory, helper</PackageTags>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <RootNamespace>Bitai.LDAPHelper</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ILdapEntry.cs" />
    <Compile Remove="LdapConnectionPipeline.cs" />
    <Compile Remove="LdapEntry.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\resources\hierarchy_32.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Novell.Directory.Ldap.NETStandard" Version="3.6.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Bitai.LDAPHelper.DTO\Bitai.LDAPHelper.DTO.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y &quot;$(TargetDir)*.*&quot; &quot;$(ProjectDir)..\..\..\_bin\netstandard2.0\LDAPHelperLib\&quot;" />
  </Target>

</Project>
