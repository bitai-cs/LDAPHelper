<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>1.4.1.1</AssemblyVersion>
    <FileVersion>1.4.1.1</FileVersion>
    <Version>1.4.2</Version>
    <AssemblyName>LDAPHelper.DTO</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Viko Bastidas</Authors>
    <Company>Bitai</Company>
    <Product>LDAP Services Wrappers</Product>
    <Description>DTO classes to generate output data by Bitai.LDAPHelper and to be used in other applications.</Description>
    <Copyright></Copyright>
    <PackageIcon>hierarchy_32.png</PackageIcon>
    <RootNamespace>LDAPHelper.DTO</RootNamespace>
    <PackageId>Bitai.LDAPHelper.DTO</PackageId>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/bitai-cs/LDAPHelper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bitai-cs/LDAPHelper.git</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>ldap, authentication, directory, helper</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\resources\hierarchy_32.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y &quot;$(TargetDir)*.*&quot; &quot;$(ProjectDir)..\..\..\_bin\netstandard2.0\LdapHelperDTO\&quot;" />
  </Target>

</Project>
